{
  "name": "rust-node-opencode-docker",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    // Node LTS installed via devcontainer feature
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    // Rust stable + rust-analyzer installed via devcontainer feature
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable",
      "components": "rust-analyzer",
      "profile": "default"
    },
    // Docker CLI installed; dind=true to enable Docker-in-Docker
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dind": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "github.vscode-github-actions",
        "svelte.svelte-vscode"
      ]
    }
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "OPENSPEC_TELEMETRY": "0",
    "DO_NOT_TRACK": "1"
  },
  // Initialize starship, install Playwright browsers and cargo-watch after container creation
  "postCreateCommand": "echo 'eval \"$(starship init bash)\"' >> ~/.bashrc && npx playwright install --with-deps chromium && cargo install cargo-watch",
  // Update global npm tools every time the container starts
  "postStartCommand": "npm install -g npm opencode-ai @fission-ai/openspec @playwright/mcp"
}
